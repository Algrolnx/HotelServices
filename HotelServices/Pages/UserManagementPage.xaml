<Page x:Class="HotelServices.Pages.UserManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Користувачі"
      Background="#FFF8F9FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Padding="15" Background="#FFF8F9FA" 
                BorderBrush="#DDDDDD" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Управління користувачами"
                           Grid.Column="0"
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#2D5F8B"
                           VerticalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.3" Color="#555555"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Grid.Column="2" 
                           Text="{Binding CurrentDateTime, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                           Foreground="#777777" 
                           FontSize="14"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Панель дій -->
        <Border Grid.Row="1" 
                Background="White" 
                Margin="15,10,15,5" 
                CornerRadius="8"
                BorderBrush="#DDDDDD" 
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="5" Opacity="0.1" Color="#555555"/>
            </Border.Effect>

            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Content="Додати користувача" 
                        Click="AddUser" 
                        Style="{StaticResource ActionButtonStyle}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Редагувати" 
                        Click="EditUser" 
                        Style="{StaticResource ActionButtonStyle}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Видалити" 
                        Click="DeleteUser" 
                        Style="{StaticResource ActionButtonStyle}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="На головну" 
                        Click="BackToMain_Click" 
                        Style="{StaticResource ActionButtonStyle}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>

        <!-- Панель фільтрів -->
        <Border Grid.Row="2" 
                Background="White" 
                Margin="15,5,15,10" 
                CornerRadius="8"
                BorderBrush="#DDDDDD" 
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="5" Opacity="0.1" Color="#555555"/>
            </Border.Effect>

            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Пошук -->
                <Border Grid.Column="0" 
                        BorderBrush="#DDDDDD" 
                        BorderThickness="1" 
                        CornerRadius="6" 
                        Background="White"
                        Margin="0,0,10,0">
                    <Grid>
                        <TextBox x:Name="SearchTextBox"
                                 Height="35"
                                 Width="220"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"
                                 FontSize="14"
                                 TextChanged="SearchTextBox_TextChanged"/>

                        <TextBlock x:Name="PlaceholderTextBlock"
                                   Text="Пошук..."
                                   Foreground="Gray"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="Visible"
                                   FontSize="14"/>
                    </Grid>
                </Border>

                <!-- Комбобокс фільтрів -->
                <Border Grid.Column="1" 
                        BorderBrush="#DDDDDD" 
                        BorderThickness="1" 
                        CornerRadius="6" 
                        Background="White"
                        Margin="0,0,10,0">
                    <ComboBox x:Name="RoleFilterComboBox" 
                              Height="35"
                              Width="180"
                              VerticalContentAlignment="Center"
                              FontSize="14"
                              BorderThickness="0"
                              SelectionChanged="FilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="Всі ролі" IsSelected="True"/>
                        <ComboBoxItem Content="Адміністратор"/>
                        <ComboBoxItem Content="Менеджер"/>
                    </ComboBox>
                </Border>

                <!-- Кнопка скидання фільтрів -->
                <Button Grid.Column="3" 
                        Content="Скинути фільтри" 
                        Click="ResetFilters_Click"
                        Style="{StaticResource ActionButtonStyle}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <!-- Основна таблиця -->
        <Border Grid.Row="3" 
                Background="White" 
                Margin="15,0,15,15" 
                CornerRadius="8"
                BorderBrush="#DDDDDD" 
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="5" Opacity="0.1" Color="#555555"/>
            </Border.Effect>

            <DataGrid x:Name="usersGrid" 
                      SelectionChanged="UsersGrid_SelectionChanged"
                      Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                    <DataGridTextColumn Header="Ім'я користувача" Binding="{Binding Username}" Width="Auto"/>
                    <DataGridTextColumn Header="Повне ім'я" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>